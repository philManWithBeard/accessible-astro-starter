---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
---

<header>
  <SkipLinks />
  <div class="announcement-bar"></div>
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item">
      <a href="/calendar">Calendar</a>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Projects</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/street-champions/">Street Champions</a>
        </li>
        <li class="submenu-item">
          <a href="/the-weekly-litter-pick/">The Weekly Litter Pick</a>
        </li>
        <li class="submenu-item">
          <a href="/growing-safety">Growing Safety</a>
        </li>
      </ul>
    </li>
  </Navigation>
</header>

<style lang="scss">
  @use '../assets/scss/base/outline' as *;

  div.announcement-bar {
    background-color: #0eb2ce;
    height: 25px;
  }

  header {
    .type-icon a {
      display: block;

      [data-icon] {
        height: auto;
        margin-top: -4px;
        width: 40px;

        path {
          fill: var(--action-color);
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
